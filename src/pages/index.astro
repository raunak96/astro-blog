---
// Any JS expression we want to add, we do it inside this 3 hyphens block (it is async by default)
// Also Component Imports (from any supported Framework here!) goes here
const userName = "Astro 2.0";
const res = await fetch("https://jsonplaceholder.typicode.com/users?_limit=10")
const users = await res.json();
const showInfo=true;
const color = "purple";
---

<>
	<h1 class={color}>Welcome to {userName}</h1>
	<ul>

        {users.map(user => <li>{user.name} - {showInfo && user.phone}</li>)}
    </ul>
</>

<!-- Here these styles only pertain this particular component/page -->
<style>
	h1 {
		color: green;
	}
	.purple {
		color: purple;
	}
</style>
