---
import "../styles/global.css";
// This interface thing is similar to propTypes in React
export interface Props {
	title: string; // title is required
	subtitle?: string; // ? means it is not required
}
const { title = "Default Prop Value goes here", subtitle } =
	Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap"
			rel="stylesheet"
		/>
		<title>{title}{subtitle && ` - ${subtitle}`}</title>
	</head>
	<body>
		<!-- Slot is similar to {children} in React -->
		<slot />
	</body>
</html>
